%h1 Add a Project

= error_messages_for @project

= form_for @project, :action => resource(:projects), :id => 'form' do
  %p Project Name
  %p= text_field :title
  
  %p Link
  %p= text_field :link
  
  %p Description
  %p= text_area :description, :cols => 38, :rows => 10
  
  %p= submit 'Add', :class => 'submit_button'